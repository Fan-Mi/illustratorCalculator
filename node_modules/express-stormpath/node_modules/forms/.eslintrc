{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"callback-return": [0],
		"camelcase": [0],
		"complexity": [2, 11],
		"dot-notation": [2, { "allowKeywords": false }],
		"eqeqeq": [2, "allow-null"],
		"id-length": [2, { "min": 1, "max": 30 }],
		"max-nested-callbacks": [2, 5],
		"max-params": [2, 3],
		"max-statements": [2, 19],
		"new-cap": [2, { "capIsNewExceptions": ["Template"] }],
		"no-extra-parens": [0],
		"operator-linebreak": [2, "after"],
		"space-before-keywords": [1, "always"]
	}
}
